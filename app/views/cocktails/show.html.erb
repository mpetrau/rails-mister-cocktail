<% @title = @cocktail.name %>
<% @subtitle = "This drink is fantastic!"  %>
<div class="sm"><%= render 'cocktails/banner' %></div>

<div class="container">
  <div class="row margin-top">
    <div class="col-md-6">
      <%= image_tag @cocktail.photo.url(:standard), class: "img-responsive" %>
      <div class="margin-top"><%= link_to "< Back to list", root_path %></div>
    </div>
    <div class="col-md-6">
      <div class="row">
      <div class="row margin-top">
        <div class="col-md-12">
          <% @cocktail.doses.each do |dose|%>
          <% if dose.persisted? %>
          <div class="panel panel-default">
            <div class="panel-body">
              <dl class="dl-horizontal">
                <dt><%= dose.description %></dt>
                <dd><%= dose.ingredient.name %><span class="pull-right"><%= link_to "delete", dose_path(dose), method: :delete %></span></dd>
              </dl>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
      </div>
      <div class="row margin-top">
        <div class="col-md-10 col-md-offset-2">
          <h3> To add ingredient: </h3>
        </div>
      </div>
      <div class="row margin-top">
      <div class="col-md-10 col-md-offset-2">
          <%= render 'cocktails/form_dose' %>
        </div>
      </div>
  </div>
</div>
