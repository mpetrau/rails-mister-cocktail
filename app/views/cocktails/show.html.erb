<% @title = @cocktail.name %>
<% @subtitle = "This drink is fantastic!"  %>
<%= render 'banner' %>

<div class="container">
  <div class="row margin-top text-center">
    <div class="col-md-6 col-md-offset-3">
      <h3> To make this delicious cocktail: </h3>
    </div>
  </div>
  <div class="row margin-top">
    <div class="col-md-6 col-md-offset-3">
      <% @doses.each do |dose|%>
      <div class="panel panel-default">
        <div class="panel-body">
        <dl class="dl-horizontal">
          <dt><%= dose.description %></dt>
          <dd><%= dose.ingredient.name %><span class="pull-right"><%= link_to "delete", cocktail_dose_path(dose), method: :delete %></span></dd>
        </dl>
        </div>
      </div>
     <% end %>
    </div>
  </div>
  <div class="row margin-top text-center">
    <div class="col-md-6 col-md-offset-3">
      <h3> To add ingredient: </h3>
    </div>
  </div>
    <div class="row margin-top">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'form_dose' %>
    </div>
  </div>
</div>
